// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  email     String   @unique
  password  String
}

model Course {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  source      String
  rank        Int
  units       Unit[]
}

model Unit {
  id          Int      @id @default(autoincrement())
  course      Course   @relation(fields: [courseId], references: [id])
  courseId    Int
  description String
  rank        Int
  modules     Module[]
}

model Module {
  id          Int     @id @default(autoincrement())
  unit        Unit    @relation(fields: [unitId], references: [id])
  unitId      Int
  title       String
  description String
  rank        Int
  chunks      Chunk[]
}

model Chunk {
  id       Int    @id @default(autoincrement())
  module   Module @relation(fields: [moduleId], references: [id])
  moduleId Int
  title    String
  content  String
  rank     Int
}
